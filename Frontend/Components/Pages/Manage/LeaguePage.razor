@page "/Manage/Leagues/{id}"
<h3 Class="mb-4">@League?.Name</h3>
<MudButton OnClick="OpenCreateSeasonDialog" Variant="Variant.Filled" Class="mr-4">Create Season</MudButton>
<MudButton Variant="Variant.Filled">Create Tournament</MudButton>

@code {
    [Parameter] public required string Id { get; set; }

    private League? League { get; set; }

    protected override async Task OnInitializedAsync()
    {
        League = await LeagueService.GetLeague(Id);
    }

    private async Task OpenCreateSeasonDialog()
    {
        await DialogService.ShowAsync<CreateSeasonDialog>("Create Season", new DialogParameters<CreateSeasonDialog>
        {
            { x => x.LeagueId, Id }
        });
    }

}   
