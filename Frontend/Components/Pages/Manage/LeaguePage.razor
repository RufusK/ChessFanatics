@page "/Manage/Leagues/{id}"
<h3 Class="mb-4 text-center">@League?.Name</h3>
<CascadingValue Value="Id" Name="LeagueId">
    <HxTabPanel Variant="TabPanelVariant.Card">
        <HxTab Title="Seasons">
            <Content>
                <Seasons/>
            </Content>
        </HxTab>
        <HxTab Title="Tournaments">
            <Content>
                <Tournaments/>
            </Content>
        </HxTab>
    </HxTabPanel>
</CascadingValue>

@code {
    [Parameter] public required string Id { get; set; }

    private League? League { get; set; }

    protected override async Task OnInitializedAsync()
    {
        League = await LeagueService.GetLeague(Id);
    }

}   
