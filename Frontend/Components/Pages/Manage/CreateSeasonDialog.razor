<MudDialog>
    <TitleContent>
        <MudText>
            Create New Season
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_seasonName" Placeholder="Season Name"/>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="() => MudDialog.Cancel() ">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string LeagueId { get; set; } = null!;

    private string _seasonName = string.Empty;

    private async Task Submit()
    {
        var league = await LeagueService.GetLeague(LeagueId);
        league.Seasons.Add(new Season
        {
            Name = _seasonName,
        });

        await DbContext.SaveChangesAsync();
        MudDialog.Close();
    }
}