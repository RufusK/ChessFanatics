@inject ILogger<CreateLeagueDialog> Logger
<MudDialog>
    <TitleContent>
        <MudText>
            Create New League
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="LeagueName" Placeholder="League Name"/>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="() => MudDialog.Cancel() ">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; }

    private string LeagueName = string.Empty;

    private async Task Submit()
    {
        var user = await UserService.GetUser();
        var league = new League
        {
            Name = LeagueName,
            Organizers =
            {
                new LeagueOrganizer
                {
                    IsOwner = true,
                    UserId = user.Id
                }
            }
        };

        DbContext.Leagues.Add(league);
        await DbContext.SaveChangesAsync();
        MudDialog.Close();
    }

}